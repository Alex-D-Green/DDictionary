        </StackPanel>
        <Label x:Name="copyrightLbl" Content="Copyright ©  2019-2023  Alexander Dyachenko" HorizontalAlignment="Right"/>
        <Label Content="License: Apache 2.0" HorizontalAlignment="Right"/>
        <Button Content="Ok" Width="75" Height="25"  HorizontalAlignment="Center" Margin="0,30,0,0" IsDefault="True" IsCancel="True"/>
    </StackPanel>
</Window>
