        <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
            <Image Height="100" Width="100" Source="/DDictionary;component/Icon/DDictionary.png"/>
            <StackPanel>
                <Label Content="DDictionary" FontFamily="Segoe UI Black" FontSize="24" Margin="0"/>
